        // <button id="test1">時間</button>
      //
        <script>
        document.getElementById('test1').onclick=function(){
        }
        window.onload = function(){
        var params = window.location.search;
        var element = params.split('&');
        var getparams = [];
        for(var i = 0;i <element.length; i++){
        var low = element[i].split('=');
        getparams.push(low[1]);
        }
        const hi = new Date();
        hi.setMinutes(hi.getMinutes()+getparams[1]);
        var butobj = document.getElementById('test1');
        butobj.innerHTML = hi.toLocaleString();
        }
        </script>
